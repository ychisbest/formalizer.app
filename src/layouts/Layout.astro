---
import "../styles/global.css";
import Config from "../config";

export interface Props {
  title: string;
  description: string;
  keywords: string[];
  ogImage?: string;
}

const {
  title,
  description,
  keywords = `${Config.name}`,
  ogImage = "/og.png",
} = Astro.props;

const canonicalURL = Astro.url.href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | {Config.name}</title>
    <meta name="google-adsense-account" content="ca-pub-9962529123137713" />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content={typeof keywords === "string" ? keywords : keywords.join(", ")}
    />
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />

    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "{Config.name}",
        "url": "https://{Config.url}"
      }
    </script>
  </head>
  <body class="min-h-screen bg-white text-gray-800 flex flex-col antialiased">
    <main class="flex-grow">
      <header class="fixed w-full bg-white shadow-sm z-10">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center h-16">
            <div class="flex-shrink-0 flex items-center">
              <a href="/" class="text-2xl font-bold text-blue-600">Formalizer</a>
            </div>
            <nav class="hidden md:flex space-x-8">
              <a
                href="/blogs"
                class="text-gray-600 hover:text-blue-600 transition-colors"
                >Blogs</a
              >
              <a
                href="/#FAQ"
                class="text-gray-600 hover:text-blue-600 transition-colors"
                >FAQ</a
              >
            </nav>
          </div>
        </div>
      </header>
      <div class="mt-16">
        <slot />
      </div>

      <footer class="bg-gray-50 px-6 py-12">
        <div class="max-w-5xl mx-auto">
          <div class="flex flex-col md:flex-row justify-between items-center">
            <div class="mb-4 md:mb-0">
              <span class="text-xl font-bold text-gray-900">Formalizer</span>
            </div>
            <div class="flex space-x-6">
              <a href="#FAQ" class="text-gray-600 hover:text-gray-900">FAQ</a>
            </div>
          </div>
          <div class="flex flex-row items-end justify-end">
            <a
              href="https://startupfa.me/s/formalizer?utm_source=formalizer.app"
              target="_blank">Startup Fame</a
            >
          </div>
          <div
            class="mt-8 pt-8 border-t border-gray-200 text-center text-gray-500"
          >
            <p>Â© 2025 Formalizer. All rights reserved.</p>
          </div>
        </div>
      </footer>
    </main>
  </body>
</html>
